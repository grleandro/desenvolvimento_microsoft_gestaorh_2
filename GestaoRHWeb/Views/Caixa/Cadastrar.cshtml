@model Caixa

@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<br />
<br />
<br />

<form asp-action="Cadastrar" asp-controller="Caixa" method="post">
    <fieldset>
        <legend>Cadastro de Caixas</legend>

        <div asp-validation-summary="ModelOnly" class="alert alert-warning"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="NumeroCaixa">Número da Caixa:</label>
                <input asp-for="NumeroCaixa" type="text" placeholder="Insira o número da Caixa" class="form-control" />
                <span asp-validation-for="NumeroCaixa"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Custodia">Posição da Custódia:</label>
                <input asp-for="Custodia" type="text" placeholder="Insira a custódia da Caixa" class="form-control" />
                <span asp-validation-for="Custodia"></span>
            </div>
        </div>
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </fieldset>
</form>

